@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div>
    <div class="columns is-multiline">
        @{
            for (int i = 0; i < 2; i++)
            {
                foreach (var p in Model.Products)
                {
                    <div class="column is-3-desktop is-4-tablet is-6-mobile">
                        <a asp-route-name="@p.Name.Replace(" ","-")">
                            <div class="card" asp-page="Product">
                                <div class="card-image">
                                    <figure class="image is-4by3">
                                        <img src="~/images/item.JPG" alt="Placeholder image"/>
                                    </figure>
                                </div>
                                <div class="card-content">
                                    <p class="title is-size-5">
                                        @p.Name   @p.Value
                                    </p>
                                    <p class="subtitle">
                                        @p.Description
                                    </p>

                                    @{
                                        string cssClass = "";
                                        string message = "";

                                        if (p.StockCount == 0)
                                        {
                                            cssClass = "is-danger";
                                            message = "Out of Stock";
                                        }
                                        else if (p.StockCount <= 10)
                                        {
                                            cssClass = "is-warning";
                                            message = "Low on Stock";
                                        }
                                    }
                                    @if (p.StockCount <= 10)
                                    {
                                        <div class="notification is-paddingless has-text-centered @cssClass">
                                            @message
                                        </div>
                                    }
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }

        }
    </div>
</div>

